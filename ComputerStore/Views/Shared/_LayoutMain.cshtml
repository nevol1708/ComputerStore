<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Laptop Tiến Thành", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="@Url.Action("Index", "GioHang")">
                        @if (Session["GioHang"] == null)
                        {
                            <span>0</span>
                        }
                        else
                        {
                            <span>
                                ( @((Session["GioHang"] as List<GioHang>).Sum(m => m.iSoLuong)) )
                            </span>
                        }
                        &nbsp;<span class="glyphicon glyphicon-shopping-cart"></span>
                    </a></li>
                </ul>
                <div class="col-md-4">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" />
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
                <ul class="nav navbar-nav">
                    <li><a>Sign up</a></li>
                    <li><a href="@Url.Action("Login", "Manager")">Sign in</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="jumbotron">
                <h1>Bootstrap Tutorial</h1>
                <p>Bootstrap is the most popular HTML, CSS, and JS framework for developing responsive, mobile-first projects on the web.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
            <div class="col-md-3">
                <div>
                    <div class="list-group-item-heading">HÃNG SẢN XUẤT</div>
                    <ul class="list-group">
                        @using ComputerStore.Models;
                        @foreach (ChiTietNSX nhasx in ViewBag.nhasanxuats)
                        {
                            <li class="list-group-item"><a href="@Url.Action("OrderBrand","SanPham", new { _idname = nhasx.MaNSX})">@nhasx.TenNSX</a></li>
                        }
                    </ul>
                </div>
                <div>
                    <div class="list-group-item-heading">KHOẢNG GIÁ</div>
                    <ul class="list-group">
                        <li class="list-group-item"><a href="@Url.Action("OrderPrice","SanPham", new { _min = 0, _max = 10000000})">dưới 10 triệu</a></li>
                        <li class="list-group-item"><a href="@Url.Action("OrderPrice","SanPham", new { _min = 10000000, _max = 14000000})">10 - 14 triệu</a></li>
                        <li class="list-group-item"><a href="@Url.Action("OrderPrice","SanPham", new { _min = 14000000, _max = 18000000})">14 - 18 triệu</a></li>
                        <li class="list-group-item"><a href="@Url.Action("OrderPrice","SanPham", new { _min = 20000000, _max = 0})">trên 20 triệu</a></li>
                    </ul>
                </div>
                <div>
                    <div class="list-group-item-heading">LỌC SẢN PHẨM</div>
                    <div>
                        <div class="list-group-item-heading">CPU</div>
                        <ul class="list-group">
                            <li class="list-group-item"><a href="@Url.Action("OrderCPU","SanPham", new { _name = "i7"})">Intel Core i7</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderCPU","SanPham", new { _name = "i5"})">Intel Core i5</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderCPU","SanPham", new { _name = "i3"})">Intel Core i3</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderCPU","SanPham", new { _name = "Pentium"})">Intel Pentium</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderCPU","SanPham", new { _name = "Celeron"})">Intel Celeron</a></li>
                        </ul>
                    </div>
                    <div>
                        <div class="list-group-item-heading">HDD</div>
                        <ul class="list-group">
                            <li class="list-group-item"><a href="@Url.Action("OrderHDD", "SanPham", new { _size ="500GB"})">500GB</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderHDD", "SanPham", new { _size ="1TB"})">1TB</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderHDD", "SanPham", new { _size ="2TB"})">2TB</a></li>
                        </ul>
                    </div>
                    <div>
                        <div class="list-group-item-heading">RAM</div>
                        <ul class="list-group">
                            <li class="list-group-item"><a href="@Url.Action("OrderRAM", "SanPham", new { _size ="4GB"})">4GB</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderRAM", "SanPham", new { _size ="8GB"})">8GB</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderRAM", "SanPham", new { _size ="16GB"})">16GB</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderRAM", "SanPham", new { _size ="32GB"})">32GB</a></li>
                        </ul>
                    </div>
                    <div>
                        <div class="list-group-item-heading">MÀN HÌNH</div>
                        <ul class="list-group">
                            <li class="list-group-item"><a href="@Url.Action("OrderScreen", "SanPham", new { _size ="14"})">14"</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderScreen", "SanPham", new { _size ="15"})">15.6"</a></li>
                            <li class="list-group-item"><a href="@Url.Action("OrderScreen", "SanPham", new { _size ="17"})">17"</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <footer>
                <p>&copy; @DateTime.Now.Year - ThanhPTg</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
